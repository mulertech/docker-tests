# =================================
# USER CONFIGURATION
# =================================
# Your local user ID (use: id -u)
USER_ID=1000
# Your local group ID (use: id -g)
GROUP_ID=1000

# =================================
# CONTAINERS CONFIGURATION
# =================================
# Container names (useful for PhpStorm and identification)
CONTAINER_NAME_APACHE=symfony-apache
CONTAINER_NAME_MYSQL=symfony-mysql
CONTAINER_NAME_PHPMYADMIN=symfony-phpmyadmin
CONTAINER_NAME_REDIS=symfony-redis
CONTAINER_NAME_MAILHOG=symfony-mailhog

# =================================
# PORTS CONFIGURATION
# =================================
# Port to access Apache web server (ex: http://localhost:8080)
APACHE_PORT=8080
# Port to access MySQL directly (ex: localhost:3307)
MYSQL_PORT=3307
# Port to access PhpMyAdmin (ex: http://localhost:8081)
PHPMYADMIN_PORT=8081
# Port for Redis
REDIS_PORT=6380
# Port for MailHog web interface (ex: http://localhost:8025)
MAILHOG_PORT=8025
# SMTP port for MailHog
MAILHOG_SMTP_PORT=1026

# =================================
# DATABASE CONFIGURATION
# =================================
# Main database name
DB_NAME=symfony_app
# MySQL user (non-root)
DB_USER=symfony_user
# MySQL user password
DB_PASSWORD=symfony_password
# MySQL root password (for administration)
DB_ROOT_PASSWORD=root_password